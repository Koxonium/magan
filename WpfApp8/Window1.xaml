<Window x:Class="magan.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magan"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel
            Name="dels"
            Background="Cyan"
            Grid.Column="3"
            Margin="2 5">
        </StackPanel>
        <StackPanel
            Margin="5"
            Grid.Column="1"
            Background="LightGray"
            Name="NameStackPanel"
            >
        </StackPanel>
        <StackPanel
            Grid.Column="2"
                        Margin="5"

            Background="LightGray"
            Name="AgeStackPanel"
            >

            

        </StackPanel>

        <TextBlock
            Grid.Column="1"
                Text="Name"
                FontSize="20"
                HorizontalAlignment="Center"/>
        <TextBlock
            Grid.Column="2"
                Text="Age"
                FontSize="20"
                HorizontalAlignment="Center"/>
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Background="DodgerBlue"
            Width="60"
            Height="30"
            Margin="180 5 5 10"
            Content="gomb"
            Click="create"
            />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Text="Létrehozás"
            Margin="30 10"
            FontSize="30"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="40"
            Background="Gray"
            Name="NameInput"/>

        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            Width="150"
            Margin="10 10 100 10"
            Height="40"
            Background="Gray"
            Name="AgeInput"/>

    </Grid>
</Window>
